@{
    ViewBag.Title = "Create Invoice";
}

<h2>Create Invoice</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div style="color: green;">@ViewBag.Message</div>
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div style="color: red;">@ViewBag.Error</div>
}

<form asp-action="Create" method="post">
    <div>
        <label for="customerName">Customer Name</label>
        <input id="customerName" name="customerName" type="text" required />
    </div>
    <div>
        <label for="date">Date</label>
        <input id="date" name="date" type="date" required />
    </div>
    <div>
        <label for="itemName">Item Name</label>
        <input id="itemName" name="itemName" type="text" required />
    </div>
    <div>
        <label for="quantity">Quantity</label>
        <input id="quantity" name="quantity" type="number" min="1" required />
    </div>
    <div>
        <label for="rate">Rate</label>
        <input id="rate" name="rate" type="number" step="0.01" min="0" required />
    </div>
    <button type="submit">Create Invoice</button>
</form>